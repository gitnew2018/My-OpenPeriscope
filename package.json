{
  "name": "my-openperiscope",
  "version": "0.2.0",
  "description": "Unofficial Periscope client, based on Pmmlabs/OpenPeriscope",
  "license": "GPL-2.0",
  "repository": "gitnew2018/My-OpenPeriscope",
  "dependencies": {
    "ws": "*"
  },
  "inject_js_end": "inject.js",
  "main": "index.html",
  "webkit": {
    "plugin": true
  },
  "single-instance": false,
  "chromium-args": "--user-data-dir=userdata",
  "window": {
    "icon": "images/openperiscope.png",
    "toolbar": true,
    "frame": true,
    "position": "center",
    "width": 800,
    "height": 500,
    "min_width": 550,
    "min_height": 200
  },
  "domain": "openperiscope",
  "web_accessible_resources": [
    "index.html"
  ]
}